{
  "manifest_version": 2,

  "name": "Happy Eyes",  
  "version": "0.1",
  "description": "One click and the web page will be more comfortable for reading",

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icons/icon32.png",
    "default_title": "Strict Readable Text"
  },
  "icons": {
    "32": "icons/icon32.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["tabs", "http://*/*", "https://*/*"]
}
